<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsatechworld.gugrify">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!--  internet permission required for loading videos and playing them  -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectLanguageAndCities"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.dashboard.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.authentication.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".view.dashboard.SearchActivity"
android:screenOrientation="portrait"/>
        <activity android:name=".view.dashboard.DisplayVideoActivity"/>
        <activity android:name=".view.ShowPlaylistActivtiy"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.DisplayBreakingNewsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".view.ReporterProfile"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".view.ReporterPostActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".view.playlist.PlayListDetaildViewActivity"></activity>
    </application>

</manifest>