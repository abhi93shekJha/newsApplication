<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/breaking_ll1"
    android:background="@color/slaty"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:weightSum="1">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/advertisementImage"
            android:scaleType="fitXY"
            android:src="@drawable/zomato"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvAdTitle"
                android:text="Zomato Restaurant"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView
                android:text="Ad"
                android:id="@+id/tvAd"
                android:layout_below="@+id/tvAdTitle"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:padding="2dp"
                android:background="@color/orange_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RatingBar
                android:id="@+id/rattingBar"
                style="@style/customRatingBar"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvAdTitle"
                android:layout_toRightOf="@+id/tvAd"
                android:layout_width="wrap_content"
                android:isIndicator="false"
                android:layout_height="20dp" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center_vertical|center"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvInstall"
            android:text="INSTALL"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tvAdTitle"
            android:layout_toRightOf="@+id/rattingBar"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:gravity="center_vertical|center"
        android:weightSum="1">
        <ImageView
            app:srcCompat="@drawable/ic_dots"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>