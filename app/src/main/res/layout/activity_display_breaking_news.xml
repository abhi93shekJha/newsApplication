<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:indeterminateDrawable="@drawable/custom_progress_dialog"
        android:visibility="gone" />
    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="190dp" >
        <ProgressBar
            android:id="@+id/fragmentprogressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminateDrawable="@drawable/custom_progress_dialog"
            android:visibility="gone" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/breaking_ll1"
        android:background="@color/slaty"
        android:layout_below="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <com.google.android.gms.ads.AdView
            android:id="@+id/news_details_adMob"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/breaking_ll1"
            android:layout_above="@+id/frame2"
            android:id="@+id/posts_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

 <TextView
     android:id="@+id/tv_comments"
     android:layout_below="@+id/posts_recycler"
     android:text="Comments"
     android:gravity="center_horizontal"
     android:textSize="20sp"
     android:textColor="@color/black"
     android:textStyle="bold"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/comments_recycler"
        android:layout_below="@+id/tv_comments"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/noComments_title"
        android:layout_below="@+id/tv_comments"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:text="No comments available"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    </FrameLayout>


</RelativeLayout>