<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/select_language_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/select_language_image"
        android:layout_height="200dp" />
    <FrameLayout
        android:layout_below="@+id/select_language_image"
        android:layout_width="match_parent"
        android:layout_above="@+id/viewChatViewGradient"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">
        <TextView
            android:id="@+id/select_language_textView"
            android:padding="13dp"
            android:layout_below="@id/select_language_image"
            android:text="Select Language"
            android:background="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />
        <GridView
            android:id="@+id/select_language_grid_view"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:background="@color/slaty"
            android:numColumns="3"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>
        </LinearLayout>
        <Button
            android:id="@+id/button_above_recycler"
            android:layout_gravity="right"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:background="#00000000"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:layout_width="110dp"
            android:background="@color/color_light_gray"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </FrameLayout>
    <View
        android:id="@+id/viewChatViewGradient"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/select_language_linear2"
        android:background="@drawable/chat_view_bottom_gradient"/>
    <LinearLayout
        android:id="@+id/select_language_linear2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/selectOnceButton"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:textSize="18sp"
            app:srcCompat="@drawable/ic_next_arrow"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>