<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_register_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/login_bg"
    android:gravity="center">

    <ScrollView
        android:id="@+id/scView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical">

               <!-- <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/app_img" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Join With Us"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_huge"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivLogo"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_margin="0dp"
                            android:textColor="@color/colorWhite"
                            android:theme="@style/TextLabel"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


                        <EditText
                            android:id="@+id/etLoginName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0dp"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter User Name"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvLoginMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter Mobile Number"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvLoginUserid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter User Name"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvLoginPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter Password"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvRefferCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter Referer Code"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter Date of Birth"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/size_ten_dp"
                        android:background="@drawable/squre_radius_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/size_eight_dp"
                        android:paddingTop="@dimen/size_eight_dp">


                        <EditText
                            android:id="@+id/tvState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorWhite"
                            android:hint="Enter State"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_radius"
                        android:padding="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:textStyle="bold"
                        android:text="Register"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>